abinfo "Installing Iosevka font file..."
install -dvm755 "$PKGDIR"/usr/share/fonts/TTF
install -vm644 "$SRCDIR"/iosevka-slab.ttc "$PKGDIR"/usr/share/fonts/TTF/

abinfo "Installing LICENSE..."
install -dvm755 "$PKGDIR"/usr/share/doc/iosevka-slab-fonts/
install -vm644 "$SRCDIR"/Iosevka-$PKGVER/LICENSE.md "$PKGDIR"/usr/share/doc/iosevka-slab-fonts/
