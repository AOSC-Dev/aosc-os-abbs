scons core tools \
	${MAKEFLAGS/ /} \
	--use-system-tcmalloc \
	--use-system-pcre \
	--use-system-boost \
	--use-system-snappy \
	--use-system-valgrind \
	--use-system-zlib \
	--use-system-yaml \
	--ssl \
        --use-system-mozjs \
        --js-engine=mozjs-45 \
	--disable-warnings-as-errors ${WIREDTIGER} \
	CCFLAGS="${CPPFLAGS} ${CFLAGS}" LINKFLAGS="${LDFLAGS}"

scons install \
	${MAKEFLAGS/ /} \
	--use-system-tcmalloc \
	--use-system-pcre \
	--use-system-boost \
	--use-system-snappy \
	--use-system-valgrind \
	--use-system-zlib \
	--use-system-yaml \
	--ssl \
        --use-system-mozjs \
        --js-engine=mozjs-45 \
	--disable-warnings-as-errors ${WIREDTIGER} \
	--prefix=$PKGDIR/usr \
	CCFLAGS="${CPPFLAGS} ${CFLAGS}" LINKFLAGS="${LDFLAGS}"

install -dm700 "$PKGDIR"/var/lib/mongodb
install -dm755 "$PKGDIR"/var/log/mongodb
