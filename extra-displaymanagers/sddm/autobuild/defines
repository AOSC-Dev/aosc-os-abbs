PKGNAME=sddm
PKGEPOCH=1
PKGSEC=x11
PKGDEP="qt-5"
BUILDDEP="cmake docutils"
PKGDES="QML based X11 display manager"

CMAKE_AFTER="-DCMAKE_INSTALL_LIBEXECDIR=/usr/lib/sddm \
             -DBUILD_MAN_PAGES=ON \
             -DDBUS_CONFIG_FILENAME=sddm_org.freedesktop.DisplayManager.conf"

if [[ "${CROSS:-$ARCH}" = "amd64" ]]; then
    USECLANG=yes
fi
