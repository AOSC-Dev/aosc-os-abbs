PKGNAME=plasma-pa
PKGSEC=kde
PKGDEP="kauth kcmutils kcodecs kconfig kcoreaddons kdeclarative kglobalaccel \
        ki18n kirigami2 kirigami-addons knotifications kpackage kservice \
        libcanberra plasma-workspace pulseaudio pulseaudio-qt \
        sound-theme-freedesktop"
