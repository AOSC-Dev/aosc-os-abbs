CMAKE_AFTER__ARMV7HF="${CMAKE_AFTER} -DMOBILE=ON"
CMAKE_AFTER__ARM64="${CMAKE_AFTER} -DMOBILE=ON"

PKGREP="kde-l10n<=16.12.3"
