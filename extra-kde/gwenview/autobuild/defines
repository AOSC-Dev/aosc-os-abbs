PKGNAME=gwenview
PKGSEC=kde
PKGDEP="baloo kactivities kded kimageformats kdelibs4support libkdcraw libkipi"
BUILDDEP="extra-cmake-modules kdoctools"
PKGDES="a fast and easy to use image viewer for KDE"

CMAKE_AFTER="-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
             -DGWENVIEW_SEMANTICINFO_BACKEND=Baloo \
             -DBUILD_TESTING=OFF"

# FIXME: kipi and kdcraw are not KF5 yet
USECLANG=yes
