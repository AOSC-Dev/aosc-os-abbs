PKGNAME=arts
PKGSEC=Trinity
PKGDEP="audiofile glib gsl jack libmad libtool libvorbis pulseaudio \
        tqtinterface"
BUILDDEP="cmake"
PKGDES="Aanalog Realtime Synthesizer, sound system for Trinity Desktop Environment"

ABTYPE=cmake
CMAKE_AFTER="-DCMAKE_NO_BUILTIN_CHRPATH=ON \
             -DWITH_GCC_VISIBILITY=OFF \
             -DCMAKE_INSTALL_PREFIX=/usr \
             -DBIN_INSTALL_DIR=/usr/bin \
             -DINCLUDE_INSTALL_DIR=/usr/include/arts \
             -DLIB_INSTALL_DIR=/usr/lib \
             -DCMAKE_SKIP_RPATH=OFF \
             -DWITH_ALSA=ON \
             -DWITH_AUDIOFILE=ON \
             -DWITH_VORBIS=ON \
             -DWITH_MAD=ON \
             -DWITH_MAD=OFF \
             -DWITH_ESOUND=OFF \
             -DWITH_JACK=ON \
             -DWITH_ALL_OPTIONS=ON"
NOSTATIC=0
NOLTO=1

ABUSECMAKEBUILD=0
