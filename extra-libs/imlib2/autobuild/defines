PKGNAME=imlib2
PKGDES="library that does image file loading and saving as well as rendering, manipulation, arbitrary polygon support"
PKGDEP="libtiff giflib bzip2 freetype x11-lib libpng libid3tag libjpeg-turbo"
PKGSEC=libs
AUTOTOOLS_AFTER="--sysconfdir=/etc/imlib2 --x-libraries=/usr/lib"
[ "$ARCH" = "amd64" ] && AUTOTOOLS_AFTER+=" --enable-amd64"
