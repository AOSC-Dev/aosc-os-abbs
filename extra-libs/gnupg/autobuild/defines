PKGNAME=gnupg
PKGSEC=libs
PKGDEP="curl openldap libusb-compat bzip2 libksba libgcrypt pth libassuan readline npth"
[ "$ARCH" = "amd64" ] && PKGDEP+=" pinentry"
PKGDES="complete and free implementation of the OpenGPG standard"
AUTOTOOLS_AFTER="--enable-maintainer-mode --enable-symcryptrun --enable-gpgtar --enable-g13"

PKGREP="gnupg+1 dirmngr"
PKGPROV="gnupg+1 dirmngr"
PKGCONFL="gnupg+1 dirmngr"
PKGEPOCH=1
