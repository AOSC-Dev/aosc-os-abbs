PKGNAME=opencv
PKGSEC=libs
PKGDEP="clp coinutils freetype gdal gst-plugins-base-1-0 harfbuzz hdf5 \
        libdc1394 libjpeg-turbo libpng libtiff libva libwebp numpy openblas \
        openexr openjdk openjpeg protobuf python-3 qt-5 tbb tesseract vtk zlib"
BUILDDEP="apache-ant beautifulsoup4 eigen-3 gflags glog glu jasper lapack \
          libcl libglvnd libgphoto2 libraw1394 libtheora libtool libvorbis \
          swig v4l-utils vulkan-headers"

PKGDES="Open Source Computer Vision Library"

PKGBREAK="frei0r-plugins<=1.4-3 waifu2x-converter-cpp<=1:5.2 \
          libkface<=17.04.2 digikam<=5.7.0 openimageio<=1.7.17"

CMAKE_AFTER="-DCV_TRACE=OFF \
             -DWITH_IPP=OFF \
             -DWITH_ITT=OFF \
             -DWITH_QT=ON \
             -DWITH_OPENGL=ON \
             -DWITH_GDAL=ON \
             -DWITH_OPENEXR=ON \
             -DWITH_CAROTENE=OFF \
             -DWITH_TBB=ON
             -DWITH_FFMPEG=OFF \
             -DWITH_XINE=OFF \
             -DWITH_LIBV4L=ON \
             -DWITH_OPENMP=ON \
             -DWITH_CLP=ON \
             -DWITH_VA=ON \
             -DWITH_VULKAN=ON \
             -DBUILD_TESTS=OFF \
             -DOpenGL_GL_PREFERENCE=GLVND \
             -DENABLE_PRECOMPILED_HEADERS=OFF \
             -DBUILD_opencv_java=ON \
             -DBUILD_opencv_dnn=ON \
             -DBUILD_opencv_dnn_modern=ON \
             -DBUILD_DOCS=ON \
             -DBUILD_EXAMPLES=ON \
             -DBUILD_opencv_python2=OFF \
             -DINSTALL_C_EXAMPLES=ON \
             -DINSTALL_PYTHON_EXAMPLES=ON \
             -DBUILD_PROTOBUF=OFF \
             -DPROTOBUF_UPDATE_FILES=ON \
             -DOPENCV_SKIP_PYTHON_LOADER=ON \
             -DOPENCV_EXTRA_MODULES_PATH=$SRCDIR/opencv_contrib-$PKGVER/modules \
             -DOPENCV_GENERATE_PKGCONFIG=ON"
CMAKE_AFTER__AMD64=" \
             ${CMAKE_AFTER} \
             -DCPU_BASELINE=SSE2"
