PKGNAME=apr-util
PKGDES="The Apache Portable Runtime utilities"
PKGSEC=utils
PKGDEP="apr expat gdbm openldap unixodbc postgresql db sqlite nss \
        openssl mariadb"

AUTOTOOLS_AFTER="--with-apr=/usr \
                 --with-ldap \
                 --with-crypto \
                 --with-gdbm=/usr \
                 --with-sqlite3=/usr \
                 --with-nss=/usr \
                 --with-odbc=/usr \
                 --with-berkeley-db=/usr \
                 --with-pgsql=/usr \
                 --with-oracle=/usr \
                 --with-openssl=/usr \
                 --with-mysql=/usr"
ABSHADOW=0
