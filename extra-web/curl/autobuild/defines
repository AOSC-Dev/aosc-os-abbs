PKGNAME=curl
PKGSEC=utils
PKGDEP="ca-certs krb5 libssh2 nghttp2 openssl zlib rtmpdump"
PKGDES="an URL retrieval utility and library"

AUTOTOOLS_AFTER="--mandir=/usr/share/man --disable-ldap --disable-ldaps --enable-ipv6 --enable-manual --enable-versioned-symbols --enable-threaded-resolver --with-gssapi --without-libidn --with-random=/dev/urandom --with-ca-bundle=/etc/ssl/ca-bundle.crt"
ABSHADOW=no
