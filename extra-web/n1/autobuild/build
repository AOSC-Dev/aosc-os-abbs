script/build --build-dir "$SRCDIR"/n1-build
script/grunt install --build-dir "$SRCDIR"/n1-build \
                     --install-dir "$PKGDIR"/usr

for s in 16 32 64 128 256 512; do
    mkdir -p "$PKGDIR"/usr/share/icons/hicolor/"$s"x"$s"/apps
    cp -p "$SRCDIR"/n1-build/icons/"$s".png \
          "$PKGDIR"/usr/share/icons/hicolor/"$s"x"$s"/apps/nylas.png
done

install -Dm644 build/resources/linux/Nylas.desktop \
               "$PKGDIR"/usr/share/applications/nylas.desktop
