PKGNAME=gdb
PKGSEC=devel
PKGDEP="ncurses expat python-2 xz guile"
PKGDES="the GNU Debugger"

AUTOTOOLS_AFTER="--disable-nls --with-system-readline --with-python=/usr/bin/python2 --with-system-gdbinit=/etc/gdb/gdbinit"
if [ "$ARCH" == armel ]; then PKGDEP="${PKGDEP%guile}" AUTOTOOLS_AFTER+=" --disable-guile"; fi
