+        g_object_unref (file);
+        firmware->priv->timeout_id =
+                g_timeout_add_seconds (GSD_UPDATES_FIRMWARE_LOGIN_DELAY,
+                                       (GSourceFunc) scan_directory_cb,
+                                       firmware);
