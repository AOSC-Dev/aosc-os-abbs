+                                   error->message);
+                        g_error_free (error);
+                }
+                goto out;
+        }
+        if (g_strcmp0 (action, "show-update-viewer") == 0) {
+                ret = g_spawn_command_line_async (BINDIR "/gpk-update-viewer",
+                                                  &error);
+                if (!ret) {
+                        g_warning ("Failure launching update viewer: %s",
+                                   error->message);
