PKGNAME=transcode
PKGSEC=video
PKGDEP="gawk imagemagick lzo libdvdread mjpegtools libmpeg2 \
        x11-lib libxml2 faac v4l-utils x264 a52dec"
PKGDES="A command-line video/DVD ripper and encoder"

# FIXME: libavresample was removed with FFmpeg 5.x, no way to save
# FFmpeg functionalities.
AUTOTOOLS_AFTER="--disable-altivec \
                 --enable-lame \
                 --enable-ogg \
                 --enable-vorbis \
                 --enable-theora \
                 --enable-libdv \
                 --enable-libxml2 \
                 --enable-v4l \
                 --enable-imagemagick \
                 --enable-libjpeg \
                 --enable-lzo \
                 --enable-mjpegtools \
                 --enable-sdl \
                 --enable-freetype2 \
                 --enable-a52 \
                 --enable-libpostproc \
                 --enable-xvid \
                 --enable-x264 \
                 --enable-alsa \
                 --enable-libmpeg2 \
                 --enable-libmpeg2convert \
                 --enable-deprecated \
                 --enable-experimental \
                 --enable-v4l \
                 --enable-libv4l2 \
                 --enable-libv4lconvert \
                 --enable-faac \
                 --disable-altivec \
                 --disable-ffmpeg"
AUTOTOOLS_AFTER__AMD64=" \
                 ${AUTOTOOLS_AFTER} \
                 --enable-sse \
                 --enable-sse2 \
                 --enable-mmx"
ABSHADOW=0
