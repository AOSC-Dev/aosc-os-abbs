VER=$PKGVER

./configure \
    --disable-docs \
    --enable-webservice \
    --enable-vde \
    --enable-vnc \
    --disable-kmods \
    --with-makeself=/usr/bin/echo

source ./env.sh
kmk

abinfo "Build RDP plugin"
kmk -C "${SRCDIR}"/src/VBox/RDP/client-1.8.4
abinfo "Build VNC plugin"
kmk -C "${SRCDIR}"/src/VBox/ExtPacks/VNC packing
abinfo "Build virtualbox image mounter"
kmk -C "${SRCDIR}"/src/VBox/ImageMounter/vboximg-mount

cd "${SRCDIR}"/out/linux.amd64/release/bin

install -vdm755 "$PKGDIR"/usr/{src,bin,lib/virtualbox}

install -vm755 VBox.sh "$PKGDIR"/usr/bin/VBox
for i in VBoxHeadless VBoxManage VBoxSDL VirtualBox vboxwebsrv VBoxBalloonCtrl; do
ln -svf VBox "$PKGDIR"/usr/bin/$i
ln -svf VBox "$PKGDIR"/usr/bin/${i,,}
done

install -vm755 VBoxTunctl "$PKGDIR"/usr/bin
install -vm755 rdesktop-vrdp "$PKGDIR"/usr/bin
install -vm755 vboximg-mount "$PKGDIR/usr/bin"

install -vdm755 "$PKGDIR"/usr/lib/virtualbox
install -vm755 *.so "$PKGDIR"/usr/lib/virtualbox
install -vm644 *.r0 VBoxEFI*.fd "$PKGDIR"/usr/lib/virtualbox

install -m4755 VBoxSDL VBoxHeadless VBoxNetDHCP VBoxNetAdpCtl VBoxNetNAT VirtualBoxVM -t "$PKGDIR"/usr/lib/virtualbox
install -vm755 VBoxManage VirtualBox VBoxSVC VBoxExtPackHelperApp VBoxXPCOMIPCD VBoxTestOGL VBoxBalloonCtrl vboxwebsrv webtest -t "$PKGDIR"/usr/lib/virtualbox

install -vdm755 "$PKGDIR"/usr/lib/virtualbox/components
rm components/VBoxREM.so # TODO: remove when dead link is fixed
install -vm755 components/* -t "$PKGDIR"/usr/lib/virtualbox/components

install -vdm755 "$PKGDIR"/usr/lib/virtualbox/ExtensionPacks

install -vdm755 "$PKGDIR"/usr/share/virtualbox/nls
install -vm755 nls/*.qm -t "$PKGDIR"/usr/share/virtualbox/nls

install -vdm755 "$PKGDIR"/usr/share/virtualbox/rdesktop-vrdp-keymaps
install -vm644 rdesktop-vrdp-keymaps/* "$PKGDIR"/usr/share/virtualbox/rdesktop-vrdp-keymaps

install -vm755 VBoxCreateUSBNode.sh VBoxSysInfo.sh -t "$PKGDIR"/usr/share/virtualbox

install -vDm644 VBox.png "$PKGDIR"/usr/share/pixmaps/VBox.png

pushd icons >/dev/null
for i in *; do
    install -vd "$PKGDIR"/usr/share/icons/hicolor/$i/mimetypes
    cp $i/* "$PKGDIR"/usr/share/icons/hicolor/$i/mimetypes
done
popd >/dev/null

install -vDm644 virtualbox.desktop "$PKGDIR"/usr/share/applications/virtualbox.desktop
install -vDm644 virtualbox.xml "$PKGDIR"/usr/share/mime/packages/virtualbox.xml

install -vdm755 "$PKGDIR"/etc/vbox
echo 'INSTALL_DIR=/usr/lib/virtualbox' > "$PKGDIR"/etc/vbox/vbox.cfg

install -vDm755 vboxshell.py "$PKGDIR"/usr/lib/virtualbox/vboxshell.py

pushd sdk/installer
VBOX_INSTALL_PATH=/usr/lib/virtualbox python2 vboxapisetup.py install --root "$PKGDIR"
popd

rm -rf sdk/installer
mv sdk "$PKGDIR"/usr/lib/virtualbox

cp -r src "$PKGDIR"/usr/src/vboxhost-$VER

pushd additions

# Forward port DKMS
cat > "$PKGDIR"/usr/src/vboxhost-TEMPVER/dkms.conf << EOF
PACKAGE_NAME="vboxhost"
PACKAGE_VERSION=TEMPVER
AUTOINSTALL=yes

BUILT_MODULE_NAME[0]="vboxdrv"
BUILT_MODULE_LOCATION[0]="vboxdrv"
DEST_MODULE_LOCATION[0]="/kernel/misc"

BUILT_MODULE_NAME[1]="vboxnetflt"
BUILT_MODULE_LOCATION[1]="vboxnetflt"
DEST_MODULE_LOCATION[1]="/kernel/misc"

BUILT_MODULE_NAME[2]="vboxnetadp"
BUILT_MODULE_LOCATION[2]="vboxnetadp"
DEST_MODULE_LOCATION[2]="/kernel/misc"

EOF

cat > "$PKGDIR"/usr/src/vboxhost-TEMPVER/do_dkms << EOF
#!/bin/sh

ACTION=
if [ "$1" = "install" ]; then
  ACTION="install"
  MODULE="$2"
  VERSION="$3"
elif [ "$1" = "uninstall" ]; then
  shift
  ACTION="uninstall"
  OLDMODULES="$*"
  break
fi

DKMS=`which dkms 2>/dev/null`
if [ -n "$DKMS" ]
then
    if [ "$ACTION" = "uninstall" ]; then

        echo "Uninstalling modules from DKMS"
        for m in $OLDMODULES
        do
            $DKMS status -m $m | while read line
            # first, remove _any_ old module
            do
                if echo "$line" | grep -q added > /dev/null ||
                   echo "$line" | grep -q built > /dev/null ||
                   echo "$line" | grep -q installed > /dev/null; then
                    # either 'vboxvideo, <version>: added'
                    # or 'vboxvideo, <version>, ...: installed'
                    version=`echo "$line" | sed "s/$m,\([^,]*\)[,:].*/\1/;t;d"`
                    echo "  removing old DKMS module $m version $version"
                    $DKMS remove -m $m -v $version --all
                fi
            done
        done
        exit 0

    elif [ "$ACTION" = "install" ]; then

        echo "Attempting to install using DKMS"
        if $DKMS add -m $MODULE -v $VERSION &&
            $DKMS build -m $MODULE -v $VERSION &&
            $DKMS install -m $MODULE -v $VERSION --force
        then
            exit 0
        fi
        echo "Failed to install using DKMS, attempting to install without"

    fi
fi

exit 1
EOF

chmod +x "$PKGDIR"/usr/src/vboxhost-TEMPVER/do_dkms
chmod 0755 "$PKGDIR"/usr/lib/virtualbox/VirtualBox

