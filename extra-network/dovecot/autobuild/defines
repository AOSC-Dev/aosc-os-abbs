PKGNAME=dovecot
PKGSEC=net
PKGDEP="bzip2 curl clucene expat krb5 linux-pam lz4 mariadb openldap \
        openssl postgresql sqlite xz"
PKGDES="An open source IMAP and POP3 email server"
BUILDDEP__AMD64="pandoc"

AUTOTOOLS_AFTER="--libexecdir=/usr/lib \
                 --with-moduledir=/usr/lib/dovecot/modules \
                 --with-systemdsystemunitdir=/usr/lib/systemd/system \
                 --with-nss \
                 --with-pam \
                 --with-mysql \
                 --with-pgsql \
                 --with-sqlite \
                 --with-ssl=openssl \
                 --with-ssldir=/etc/ssl \
                 --with-gssapi \
                 --with-ldap=plugin \
                 --with-zlib \
                 --with-bzlib \
                 --with-lzma \
                 --with-lz4 \
                 --with-libcap \
                 --with-solr \
                 --with-lucene \
                 PANDOC=false"
AUTOTOOLS_AFTER__AMD64=" \
                 ${AUTOTOOLS_AFTER} \
                 --with-docs PANDOC=/usr/bin/pandoc"

NOLTO=1
