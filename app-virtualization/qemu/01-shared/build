if ! ab_match_arch loongarch64 && \
   ! ab_match_arch loongson3 && \
   ! ab_match_arch riscv64; then
    COMMON_CONFIGURE_FLAGS="
	--prefix=/usr
	--sysconfdir=/etc
	--localstatedir=/var
	--python=/usr/bin/python3
	--disable-strip
	--enable-lto
    "
else
    COMMON_CONFIGURE_FLAGS="
	--prefix=/usr
	--sysconfdir=/etc
	--localstatedir=/var
	--python=/usr/bin/python3
	--disable-strip
	--disable-lto
    "
fi

# Note: --disable-rbd, we do not maintain Ceph.
# Note: --disable-glusterfs, we do not maintain GlusterFS.
# Note: --disable-selinux, we do not maintain SELinux (yet?).
# Note: --disable-libpmem, not ready to maintain that stack yet (libfabric => pmdk).
# Note: --disable-cfi, not compatible with many features.
# Note: --disable-netmap, not sure how useful it is and it seems difficult to maintain.
SYSTEM_CONFIGURE_FLAGS="
	--disable-user
	--smbd=/usr/bin/smbd
	--enable-docs
	--libexecdir=/usr/lib/qemu
	--enable-gtk
	--enable-linux-aio
	--enable-seccomp
	--enable-spice
	--enable-tpm
	--enable-modules
	--enable-libiscsi
	--enable-mpath
	--enable-curl
	--disable-gcrypt
	--enable-nettle
	--enable-malloc=jemalloc
	--enable-smartcard
	--enable-pie
	--audio-drv-list=pa,sdl,alsa,jack
	--enable-vhost-user
	--enable-libvduse
	--disable-cfi
	--enable-fuse
	--enable-fuse-lseek
	--enable-gnutls
	--enable-crypto-afalg
	--enable-blkio
	--enable-sndio
	--disable-netmap
	--enable-pvrdma
	--enable-rdma
	--disable-rbd
	--enable-u2f
	--disable-glusterfs
	--enable-lzfse
	--disable-libpmem
	--enable-libdaxctl
	--enable-fuse-lseek
	--disable-selinux
"

# Note: These optimizations are runtime-enabled, so they should work on any
# target machines.
if ab_match_arch amd64; then
	SYSTEM_CONFIGURE_FLAGS+="
		--enable-avx2
		--enable-avx512f
		--enable-avx512bw
	"
fi

USER_CONFIGURE_FLAGS="
	--disable-system
	--enable-attr
	--enable-linux-user
	--enable-tcg
	--disable-bpf
	--disable-bsd-user
	--disable-capstone
	--disable-docs
	--disable-fdt
	--disable-gcrypt
	--disable-glusterfs
	--disable-gnutls
	--disable-gtk
	--disable-install-blobs
	--disable-kvm
	--disable-libiscsi
	--disable-libnfs
	--disable-libssh
	--disable-linux-io-uring
	--disable-nettle
	--disable-opengl
	--disable-qom-cast-debug
	--disable-sdl
	--disable-system
	--disable-tools
	--disable-tpm
	--disable-vde
	--disable-vhost-crypto
	--disable-vhost-kernel
	--disable-vhost-net
	--disable-vhost-user
	--disable-vnc
	--disable-werror
	--disable-xen
	--disable-zstd
	--static
"

mkdir -p "${SRCDIR}/src.system/build"
pushd "${SRCDIR}/src.system/build"
	abinfo "Configuring system-mode binary build..."
	../configure ${COMMON_CONFIGURE_FLAGS} ${SYSTEM_CONFIGURE_FLAGS} \
		--extra-ldflags="${LDFLAGS}" \
		--extra-cflags="${CFLAGS}"

	abinfo "Building..."
	make

	abinfo "Installing to PKGDIR..."
	make DESTDIR="${PKGDIR}" install
popd

mkdir -p "${SRCDIR}/src.user/build"
pushd "${SRCDIR}/src.user/build"
	abinfo "Configuring user-mode binary build..."
	../configure ${COMMON_CONFIGURE_FLAGS} ${USER_CONFIGURE_FLAGS} \
		--extra-ldflags="${LDFLAGS}" \
		--extra-cflags="${CFLAGS}"

	abinfo "Building static user emulation tools"
	make

	# Binaries should be installed in split packages
	mkdir -p "$SRCDIR"/staticbin
	cp -v qemu-bundle/usr/bin/qemu-* "$SRCDIR"/staticbin/
popd
