if [[ "${CROSS:-$ARCH}" = "armv4" || \
      "${CROSS:-$ARCH}" = "armv6hf" || \
      "${CROSS:-$ARCH}" = "armv7hf" || \
      "${CROSS:-$ARCH}" = "arm64" ]]; then
	GLES="USE_GLES=1"
fi

./m64p_build.sh "$GLES" NEW_DYNAREC=1
./m64p_install.sh "$GLES" NEW_DYNAREC=1 DESTDIR="$PKGDIR" \
                  PREFIX=/usr MANDIR=/usr/share/man
