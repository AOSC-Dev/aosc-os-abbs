    "$PKGDIR"/usr/share/man/man1/nvidia-xconfig.1.gz

abinfo "NVIDIA Bug Reporter..."
install -Dvm755 nvidia-bug-report.sh \
    "$PKGDIR"/usr/bin/nvidia-bug-report

