PKGNAME=cups
PKGSEC=admin
PKGDEP="acl linux-pam bc libusb dbus systemd libpaper hicolor-icon-theme \
        openssl libtiff libpng krb5 avahi xdg-utils"
PKGRECOM="cups-filters colord"
PKGDES="The CUPS Printing System"
ABSHADOW=no

AUTOTOOLS_AFTER="--with-logdir=/var/log/cups \
                 --with-docdir=/usr/share/cups/doc \
                 --with-cups-user=daemon \
                 --with-cups-group=lp \
                 --enable-pam=yes \
                 --enable-raw-printing \
                 --enable-dbus --with-dbusdir=/etc/dbus-1 \
                 --enable-ssl=yes \
                 --enable-threads \
                 --enable-avahi\
                 --enable-libpaper"

USECLANG=no
RECONF=no
