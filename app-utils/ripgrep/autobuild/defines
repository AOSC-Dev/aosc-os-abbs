PKGNAME=ripgrep
PKGSEC=utils
PKGDEP="glibc pcre2"
BUILDDEP="asciidoctor llvm rustc"
PKGDES="Line-oriented search tool that recursively searches your current directory for a regex pattern"

CARGO_AFTER="--features pcre2"

