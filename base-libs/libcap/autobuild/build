abinfo "Building libcap ..."
make GOLANG=no
make prefix=/usr \
     lib=lib \
     GOLANG=no \
     RAISE_SETFCAP=no \
     SBINDIR=/usr/bin \
     DESTDIR="$PKGDIR" install

abinfo "Installing example capability.conf ..."
install -Dvm644 "$SRCDIR"/pam_cap/capability.conf \
    "$PKGDIR"/usr/share/doc/libcap/capability.conf.example
