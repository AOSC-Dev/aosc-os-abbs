PKGNAME=qt-5
PKGEPOCH=1
PKGSEC=x11
PKGDEP="libjpeg-turbo xcb-util-renderutil xcb-util-cursor xcb-util-wm xcb-util-image \
        xcb-util-keysyms mesa dbus fontconfig systemd sqlite icu libxkbcommon pulseaudio \
        desktop-file-utils hicolor-icon-theme xdg-utils libxslt alsa-lib bluez geoclue \
        libmng openal-soft libwebp libinput libproxy re2 tslib"
BUILDDEP="postgresql unixodbc sqlite ruby gperf ninja"
PKGDES="Qt version 5"
ABTYPE=self

ABRPMAUTOPROVONLY=yes
NOSTATIC=no
AB_FLAGS_PIE=0

# FIXME: no V8, gold linker, or MySQL suport for powerpc and mipsel.
if [[ "${CROSS:-$ARCH}" = "powerpc" || "${CROSS:-$ARCH}" = "mipsel" ]]; then
    NOMAKE="-skip webengine"
else
    MYSQL="-plugin-sql-mysql"
    BUILDDEP+=" mariadb"
    GOLD="-use-gold-linker"
fi
