OLDARCH=$ARCH
unset ARCH
SRCARCH=x86
cp -v autobuild/$OLDARCH/config "$SRCDIR"/.config

. autobuild/build-common/set-var

make

. autobuild/build-common/strip-modules

make INSTALL_MOD_PATH="$PKGDIR" modules_install

mkdir -p "$PKGDIR"/usr
mv "$PKGDIR"/lib "$PKGDIR"/usr/lib

mkdir -p "$PKGDIR"/boot 
cp arch/x86/boot/bzImage "$PKGDIR"/boot/vmlinuz-aosc-retro-nounivt-$version
export ARCH=$OLDARCH
rm -rf "$PKGDIR"/usr/lib/firmware

. autobuild/build-common/gen-scripts
