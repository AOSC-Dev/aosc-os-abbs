PKGNAME=openmpi
PKGSEC=science
PKGDEP="glibc libtool hwloc openssh python-2 python-3"
BUILDDEP="inetutils valgrind"
# FIXME: Valgrind is not yet available.
BUILDDEP__LOONGARCH64="${BUILDDEP/valgrind/}"
BUILDDEP__RISCV64="${BUILDDEP/valgrind/}"
PKGDES="High performance message passing library"

NOSTATIC=0
AUTOTOOLS_AFTER="--sysconfdir=/etc/openmpi \
                 --enable-mpi-fortran=all \
                 --libdir=/usr/lib/openmpi \
                 --with-valgrind \
                 --enable-memchecker \
                 --enable-pretty-print-stacktrace \
                 --without-slurm \
                 --with-hwloc=/usr \
                 --with-libltdl=/usr \
                 --disable-mpi-java \
                 --enable-mpi-cxx
                 FC=/usr/bin/gfortran \
                 FCFLAGS="
AUTOTOOLS_AFTER__RISCV64="${AUTOTOOLS_AFTER} --disable-memchecker --without-valgrind"
AUTOTOOLS_AFTER__LOONGARCH64="${AUTOTOOLS_AFTER} --disable-memchecker --without-valgrind"
PKGBREAK="arpack-ng<=3.2.0-1 boost<=1.58.0-3 supertuxkart<=0.9.2 \
          valgrind<=3.12.0"
