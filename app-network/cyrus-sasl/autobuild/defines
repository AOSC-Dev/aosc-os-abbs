ABSHADOW=no
PKGNAME=cyrus-sasl
PKGSEC=libs
PKGDES="A Simple Authentication and Security Layer, a method for adding authentication support to connection-based protocols"
PKGDEP="sqlite openssl krb5"
BUILDDEP="automake autoconf"

AUTOTOOLS_AFTER="--disable-static \
                 --enable-shared \
                 --enable-alwaystrue \
                 --enable-checkapop \
                 --enable-cram \
                 --enable-digest \
                 --disable-otp \
                 --disable-srp \
                 --disable-srp-setpass \
                 --disable-krb4 \
                 --enable-gssapi \
                 --enable-auth-sasldb \
                 --enable-plain \
                 --enable-anon \
                 --enable-login \
                 --enable-ntlm \
                 --disable-passdss \
                 --disable-sql \
                 --without-mysql \
                 --without-pgsql \
                 --with-sqlite3=/usr/lib \
                 --disable-macos-framework \
                 --with-pam \
                 --with-saslauthd=/var/run/saslauthd \
                 --with-ldap \
                 --with-dblib=gdbm \
                 --with-configdir=/etc/sasl2:/etc/sasl:/usr/lib/sasl2 \
                 --sysconfdir=/etc \
                 --with-devrandom=/dev/urandom"
