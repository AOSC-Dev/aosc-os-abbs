PKGNAME=texworks
PKGSEC=tex
PKGDEP="poppler hunspell desktop-file-utils lua python-3 qt-5 zlib"
PKGDES="A Qt based TeX editor endorsed by the TUG"

CMAKE_AFTER="-DTW_BUILD_ID=AOSC \
             -DWITH_LUA=ON \
             -DWITH_PYTHON=ON \
             -DPYTHON_LIBRARIES=$LIBDIR/python${ABPY3VER} \
             -DPYTHON_INCLUDE_DIR=$INCLUDE/python${ABPY3VER}"
